@model PersonViewModel

    <div class="row mt-3">
        <div class="container mt-5">
            <div class="col-md-12">
                <table class="table table-hover table-striped table-bordered">
                    <thead>
                        <tr>     
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Age</th>
                        
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Person person in Model.People)
                        {
                            <tr>
                                <td>@person.FirstName</td>
                                <td>@person.LastName</td>
                                <td>@person.Age</td>
           
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
